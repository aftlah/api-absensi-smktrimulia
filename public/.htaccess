# .htaccess template untuk shared hosting
# Pastikan mod_rewrite diaktifkan
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect www ke non-www (opsional, hapus tanda # untuk mengaktifkan)
    # RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    # RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

    # Redirect HTTP ke HTTPS (opsional, hapus tanda # untuk mengaktifkan)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Konfigurasi untuk React Router (Single Page Application)
    # Jika file atau folder yang diminta tidak ada, arahkan ke index.html
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.html [QSA,L]

    # Melindungi file .htaccess sendiri
    <Files .htaccess>
        Order deny,allow
        Deny from all
    </Files>
</IfModule>

# Menyembunyikan server signature
ServerTokens Prod
ServerSignature Off

# Mengatur timezone server (opsional, sesuaikan dengan zona waktu Anda)
# SetEnv TZ Asia/Jakarta

# Mematikan directory browsing
Options -Indexes

# Mengatur charset default
AddDefaultCharset UTF-8

# Kompresi file tertentu dengan mod_deflate (opsional)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache file statis (opsional)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>
